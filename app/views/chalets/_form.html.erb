

<!-- Partie du form pour ajouter photo avec Attachinary -->
  
      <h4 class="color-green">Add your beautiful Cabin ! âœ¨</h4>
      <%= simple_form_for(@chalet) do |f| %>
        <%= f.input :name, required: true, autofocus: true, placeholder: "Name", label: false %>  
        <%= f.input :last_renovation, required: true, autofocus: true, placeholder: "Last renovation", label: false %>
         <%= f.input :photos, as: :attachinary %>
       
         <div class: "row"> 
         <div class="col-xs-6">
         <%= f.input :city, required: true, autofocus: true, placeholder: "Nearest City", label: false %>
         </div>
         <div class="col-xs-6">
        <%= f.input :location, required: true, autofocus: true, placeholder: "Lieu-dit", label: false %>
         </div>
        </div>

        <div class: "row"> 
         <div class="col-xs-6">
        <%= f.input :latitude, required: true, autofocus: true, placeholder: "Latitude", label: false %>
         </div>
         <div class="col-xs-6">
        <%= f.input :longitude, required: true, autofocus: true, placeholder: "Longitude", label: false %>
         </div>
        </div>
        <%= f.input :altitude, required: true, autofocus: true, placeholder: "Altitude", label: false %>
        <%= f.input :rating, required: true, autofocus: true, placeholder: "Rating", label: false %>
         <%= f.input :capacity, required: true, autofocus: true, placeholder: "Number of Beds", label: false %>
        <%= f.input :price, required: true, autofocus: true, placeholder: "Price per bed, per night", label: false %> 
      
       <div class: "row"> 
        <div class="col-xs-6">
          <%= f.input :opening_date, as: :string, input_html: {class: "datepicker"}, required: true, autofocus: true, placeholder: "opening date", label: false%>
        </div>
        <div class="col-xs-6">
          <%= f.input :closing_date, as: :string, input_html: {class: "datepicker"}, required: true, autofocus: true, placeholder: "closing date", label: false%> 
        </div>
       </div>
        <%= f.input :cb_accepted, required: true, autofocus: true, placeholder: "CB accepted, true or false ?"%>
      
      
        <%= f.button :submit, "Add my Cabin !", class: "btn-medium" %>
      <% end %>

<% content_for(:after_js) do %>
  <script>
    $('.datepicker').datepicker();
  </script>
<% end %>