            <div class="card_photo">
              <% trip.chalet.photos.each do |photo| %>
                <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

