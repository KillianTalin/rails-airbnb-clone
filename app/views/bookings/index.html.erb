</ul>

<!-- Tab panes -->
<div class="tab-content container">
  <div class="tab-pane active" id="home" role="tabpanel">
    <div class="list_book">
      <h1>Your trips</h1>
      <% if @bookings_guest.empty? %>
        <h2>You don't have any bookings, book now!</h2>
      <% end %>
      <% fois = 1 %>
      <% @bookings_guest.each do |trip|%>
        <% if trip.now %>
            <% if fois == 1 %>
              <h3>Now</h3>
              <% fois = fois + 2 %>
            <% end %>
          <div class="card_host">
            <div class="card_info">
              <p>Enjoy !</p>
              <h4>
                Au <%= trip.chalet.name %> du <%= trip.start_date.to_time.strftime("%d/%m/%Y")%> au <%= trip.end_date.to_time.strftime("%d/%m/%Y")%> ( <%= trip.during %> days )
              </h4>
              <%= trip.guest_number %>
              <p class="price"> Checkout: <%= trip.checkout %> $</p>

              <p class="date_created"> Reserved at: <%= trip.created_at.strftime("%m/%d/%Y") %> </p>
              <%= link_to chalet_booking_path(trip.chalet_id, trip.id) do %>
                <span class="btn btn-primary">More details</span>
              <% end %>
            </div>
            <div class="card_photo">
              <% trip.chalet.photos.each do |photo| %>
                <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>

      <% fois = 1 %>
      <% @bookings_guest.each do |trip|%>
        <% if trip.futur %>
            <% if fois == 1 %>
              <h3>Your future trip</h3>
              <% fois = fois + 2 %>
            <% end %>
          <div class="card_host">
            <div class="card_info">
              <p>D - <%= trip.before %> before this trip</p>
              <h4>
                Au <%= trip.chalet.name %> du <%= trip.start_date.to_time.strftime("%d/%m/%Y")%> au <%= trip.end_date.to_time.strftime("%d/%m/%Y")%> ( <%= trip.during %> days )
              </h4>
              <p>You are <%= trip.guest_number %> guests</p>
              <p class="price"> Checkout: <%= trip.checkout %> $</p>
              <p class="date_created"> Reserved at: <%= trip.created_at.strftime("%m/%d/%Y") %> </p>
              <%= link_to chalet_booking_path(trip.chalet_id, trip.id) do %>
                <span class="btn btn-primary">More details</span>
              <% end %>
            </div>
            <div class="card_photo">
              <% trip.chalet.photos.each do |photo| %>
                <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>

      <% fois = 1 %>
      <% @bookings_guest.each do |trip|%>
        <% if trip.passed %>
            <% if fois == 1 %>
              <h3>Your passed trip</h3>
              <% fois = fois + 2 %>
            <% end %>
          <div class="card_host">
            <div class="card_info">
              <p><%= trip.finished_ago %> days ago</p>
              <h4>
                Au <%= trip.chalet.name %> du <%= trip.start_date.to_time.strftime("%d/%m/%Y")%> au <%= trip.end_date.to_time.strftime("%d/%m/%Y")%> ( <%= trip.during %> days )
